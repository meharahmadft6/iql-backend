doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    style(type="text/css").
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }
      .button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white !important;
        text-decoration: none;
        border-radius: 5px;
        margin: 15px 0;
      }
      .footer {
        margin-top: 30px;
        font-size: 0.8em;
        color: #777;
      }
  body
    block content
    .footer
